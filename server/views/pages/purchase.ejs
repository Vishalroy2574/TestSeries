    <script>
        const TEST_ID = '<%= test._id %>';
        const TEST_PRICE = <%= test.price || 0 %>;
        const TEST_TITLE = <%- JSON.stringify(test && test.title ? test.title : '') %>;
        const USER_NAME = <%- JSON.stringify(user && user.name ? user.name : '') %>;
        const USER_EMAIL = <%- JSON.stringify(user && user.email ? user.email : '') %>;

        /* ‚îÄ‚îÄ Summary toggle ‚îÄ‚îÄ */
        const body = document.getElementById('summaryBody');
        const chevron = document.getElementById('chevron');
        let open = true;
        body.style.maxHeight = body.scrollHeight + 'px';

        document.getElementById('summaryHead').addEventListener('click', () => {
            open = !open;
            body.style.maxHeight = open ? body.scrollHeight + 'px' : '0px';
            chevron.classList.toggle('open', open);
        });

        /* ‚îÄ‚îÄ Phone digits only ‚îÄ‚îÄ */
        document.getElementById('fphone').addEventListener('input', function () {
            this.value = this.value.replace(/\D/g, '').slice(0, 10);
        });

        /* ‚îÄ‚îÄ Toast ‚îÄ‚îÄ */
        function toast(msg, type = '') {
            const el = document.getElementById('toast');
            el.className = type;
            el.textContent = msg;
            el.classList.add('show');
            setTimeout(() => el.classList.remove('show'), 4000);
        }

        /* ‚îÄ‚îÄ Confetti ‚îÄ‚îÄ */
        function confetti() {
            const c = document.getElementById('canvas');
            c.style.display = 'block';
            c.width = innerWidth; c.height = innerHeight;
            const ctx = c.getContext('2d');
            const colors = ['#7c3aed', '#a855f7', '#f43f5e', '#f59e0b', '#10b981', '#3b82f6', '#ec4899'];
            const pts = Array.from({ length: 150 }, () => ({
                x: Math.random() * c.width,
                y: -20,
                r: Math.random() * 8 + 3,
                d: Math.random() * 14 + 5,
                color: colors[~~(Math.random() * colors.length)],
                ta: 0, ts: Math.random() * .12 + .04, tilt: 0,
            }));
            let f = 0;
            (function draw() {
                ctx.clearRect(0, 0, c.width, c.height);
                pts.forEach(p => {
                    ctx.beginPath();
                    ctx.ellipse(p.x + p.tilt, p.y, p.r, p.r * .4, p.ta, 0, Math.PI * 2);
                    ctx.fillStyle = p.color; ctx.fill();
                    p.y += p.d; p.ta += p.ts; p.tilt = Math.sin(p.ta) * 14;
                });
                if (++f < 150) requestAnimationFrame(draw);
                else { ctx.clearRect(0, 0, c.width, c.height); c.style.display = 'none'; }
            })();
        }

        /* ‚îÄ‚îÄ Main payment flow ‚îÄ‚îÄ */
        async function startPayment() {
            const name = document.getElementById('fname').value.trim();
            const email = document.getElementById('femail').value.trim();
            const phone = document.getElementById('fphone').value.trim();

            // Validate
            if (!name) {
                document.getElementById('fname').classList.add('error');
                toast('‚ö†Ô∏è Please enter your name.', 'err'); return;
            }
            if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/.test(email)) {
                document.getElementById('femail').classList.add('error');
                toast('‚ö†Ô∏è Please enter a valid email.', 'err'); return;
            }
            document.getElementById('fname').classList.remove('error');
            document.getElementById('femail').classList.remove('error');

            const btn = document.getElementById('payBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spin"></span> Creating order...';

            try {
                // Step 1: Create Razorpay order on backend
                const orderRes = await fetch(`/api/purchases/create-order/${TEST_ID}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({ buyerName: name, buyerEmail: email, buyerPhone: phone }),
                });

                const orderData = await orderRes.json();

                if (!orderRes.ok) {
                    if (orderData && typeof orderData === 'object' && orderData.alreadyPurchased) {
                        toast('‚úÖ You already own this test! Redirecting...', 'ok');
                        setTimeout(() => location.href = '/tests/' + TEST_ID, 1800);
                        return;
                    }

                    // Normalize error message from backend (string or object)
                    let errMsg = 'Could not create order.';
                    if (orderData) {
                        if (typeof orderData === 'string') errMsg = orderData;
                        else if (orderData.message) errMsg = orderData.message;
                    }
                    console.error('Create-order failed:', orderRes.status, orderData);
                    throw new Error(errMsg);
                }

                btn.innerHTML = '<span class="spin"></span> Opening payment...';

                // Step 2: Open Razorpay modal
                const options = {
                    key: orderData.keyId,
                    amount: orderData.amount,
                    currency: orderData.currency,
                    name: 'Test Series Hub',
                    description: TEST_TITLE,
                    order_id: orderData.orderId,
                    prefill: {
                        name: name,
                        email: email,
                        contact: phone ? ('+91' + phone) : ''
                    },
                    theme: { color: '#7c3aed' },
                    modal: {
                        ondismiss() {
                            btn.disabled = false;
                            btn.innerHTML = 'Confirm &amp; Pay';
                            toast('‚ùå Payment cancelled.', 'err');
                        }
                    },

                    handler: async function (response) {
                        btn.innerHTML = '<span class="spin"></span> Verifying payment...';

                        try {
                            // Step 3: Verify payment on backend
                            const verifyRes = await fetch(`/api/purchases/verify/${TEST_ID}`, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                credentials: 'include',
                                body: JSON.stringify({
                                    razorpay_order_id: response.razorpay_order_id,
                                    razorpay_payment_id: response.razorpay_payment_id,
                                    razorpay_signature: response.razorpay_signature,
                                    buyerName: name,
                                    buyerEmail: email,
                                    buyerPhone: phone,
                                }),
                            });

                            const verifyData = await verifyRes.json();

                            if (!verifyRes.ok) throw new Error(verifyData.message || 'Verification failed.');

                            // Step 4: Show success!
                            confetti();
                            document.getElementById('successOverlay').classList.add('visible');
                            document.getElementById('viewTestBtn').href = '/tests/' + TEST_ID;

                        } catch (err) {
                            toast('‚ùå ' + err.message, 'err');
                            btn.disabled = false;
                            btn.innerHTML = 'Confirm &amp; Pay';
                        }
                    }
                };

                const rzp = new Razorpay(options);
                rzp.on('payment.failed', function (response) {
                    toast('‚ùå Payment failed: ' + (response.error?.description || 'Unknown error'), 'err');
                    btn.disabled = false;
                    btn.innerHTML = 'Confirm &amp; Pay';
                });
                rzp.open();

            } catch (err) {
                toast('‚ùå ' + err.message, 'err');
                btn.disabled = false;
                btn.innerHTML = 'Confirm &amp; Pay';
            }
        }
    </script>
</body>

