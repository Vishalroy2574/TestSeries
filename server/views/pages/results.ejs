<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    <%- include('../partials/header', { user }) %>

        <main class="container" style="padding-top: 2rem; padding-bottom: 2rem;">
            <div class="space-y-6">
                <div>
                    <h1 class="text-3xl font-semibold text-slate-900">My Results</h1>
                    <p class="mt-1 text-sm text-slate-500">View your test performance history</p>
                </div>

                <% if (results.length===0) { %>
                    <div class="card text-center">
                        <p class="text-slate-500">You haven't taken any tests yet.</p>
                        <a href="/" class="btn-primary mt-4">Browse Tests</a>
                    </div>
                    <% } else { %>
                        <div class="space-y-4">
                            <% results.forEach(function(result) { %>
                                <div class="card">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <h3 class="font-semibold text-slate-900">
                                                <%= result.testId.title %>
                                            </h3>
                                            <p class="text-xs text-slate-500 mt-1">
                                                Completed on <%= new Date(result.completedAt).toLocaleDateString() %> at
                                                    <%= new Date(result.completedAt).toLocaleTimeString() %>
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <div class="text-2xl font-bold text-rose-500">
                                                <%= result.score %>/<%= result.totalQuestions %>
                                            </div>
                                            <div class="text-xs text-slate-500">
                                                <%= ((result.score/result.totalQuestions)*100).toFixed(1) %>%
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-4 grid gap-3 sm:grid-cols-2">
                                        <div>
                                            <div class="text-xs font-medium text-slate-600">Time Spent</div>
                                            <div class="text-sm text-slate-900">
                                                <%= Math.floor(result.timeSpent/60) %> min <%= result.timeSpent%60 %>
                                                        sec
                                            </div>
                                        </div>
                                        <div>
                                            <div class="text-xs font-medium text-slate-600">Accuracy</div>
                                            <div class="text-sm text-slate-900">
                                                <%= ((result.score/result.totalQuestions)*100).toFixed(1) %>%
                                            </div>
                                        </div>
                                    </div>

                                    <details class="mt-4">
                                        <summary class="cursor-pointer text-sm font-semibold text-rose-500">View
                                            Detailed Results</summary>
                                        <div class="mt-3 space-y-3">
                                            <% result.testId.questions.forEach(function(question, qIndex) { %>
                                                <div class="p-3 rounded-lg" style="background-color: #f8fafc;">
                                                    <div class="text-sm font-medium text-slate-900 mb-2">
                                                        Q<%= qIndex + 1 %>: <%= question.question %>
                                                    </div>
                                                    <div class="text-xs">
                                                        <div
                                                            class="<%= result.answers[qIndex] === question.correctAnswer ? 'text-green-600' : 'text-red-600' %>">
                                                            Your Answer: <%= result.answers[qIndex] || 'Not answered' %>
                                                        </div>
                                                        <div class="text-green-600">
                                                            Correct Answer: <%= question.correctAnswer %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                    </details>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </div>
        </main>

        <%- include('../partials/footer') %>
</body>

</html>